@page
@model LoginModel
@using WebProje
@using WebProje.Models
@inject IStringLocalizer<lang> lang




<div class="row">
    <div class="col-md-4" ></div>
    <div class="col-md-4 mt-3">
        <h2>@lang["Login"]</h2>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">@lang["Email"]</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">@lang["Password"]</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">

                            <input asp-for="Input.RememberMe" />@lang["RememberMe"]

                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@lang["Login"]</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" style="color:white" asp-page="./ForgotPassword">@lang["Forgot your password?"]</a>
                    </p>
                    <p>
                        <a asp-page="./Register" style="color:white" asp-route-returnUrl="@Model.ReturnUrl">@lang["Register"]</a>
                    </p>

                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
