@model IEnumerable<WebProje.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<body id="reportsPage" class="bg02">
    <div class="" id="home">
        <div class="container">

            <!-- row -->
            <div class="row tm-content-row tm-mt-big">
                <div class="col-xl-12 col-lg-12 tm-md-12 tm-sm-12 tm-col">
                    <div class="bg-white">
                        <div class="row">
                            <div class="col-md-8 col-sm-12">
                                <h2 class="tm-block-title d-inline-block m-4">@lang["Product"]</h2>

                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {

                                @if (User.IsInRole("Admin"))
                                {

                                    <div class="col-md-4 col-sm-12 text-right">
                                        <a href="/Products/Create" class="btn btn-small btn-primary m-4">Yeni Ürün Ekle</a>
                                    </div>
                                }

                            }

                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-striped tm-table-striped-even mt-3">
                                <thead>
                                    <tr class="tm-bg-gray">
                                        <th scope="col">@lang["Product Name"]</th>
                                        <th scope="col" class="text-center">@lang["Product Price"]</th>
                                        <th scope="col" class="text-center">@lang["Product Stock"]</th>

                                        @if (User.Identity.IsAuthenticated)
                                        {

                                            @if (User.IsInRole("Admin"))
                                            {

                                                <th scope="col">&nbsp;</th>
                                            }

                                        }

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        @if (User.Identity.IsAuthenticated)
                                        {

                                            @if (User.IsInRole("Admin"))
                                             {
                                                <td class="tm-product-name"><a href="/Products/Edit/@item.ProductID"> @Html.DisplayFor(modelItem => item.ProductName)</a></td>
                                                
                                             }
                                         }
                                        <td class="tm-product-name">@Html.DisplayFor(modelItem => item.ProductName)</td>
                                        <td class="text-center"> @Html.DisplayFor(modelItem => item.ProductPrice)</td>
                                        <td class="text-center"> @Html.DisplayFor(modelItem => item.ProductStock)</td>

                                        @if (User.Identity.IsAuthenticated)
                                        {

                                    @if (User.IsInRole("Admin"))
                                    {

                                    <td><a href="/Products/Delete/@item.ProductID" class="fas fa-trash-alt tm-trash-icon"></a></td>}}

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="tm-table-mt tm-table-actions-row">
                            <div class="tm-table-actions-col-left  ">
                                <a href="/Categoryies/Index"><h3>@lang["Categories"]</h3></a>
                               
                            </div>
                        </div>
                    </div>
                </div>
