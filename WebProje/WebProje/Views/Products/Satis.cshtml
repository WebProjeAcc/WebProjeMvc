@model WebProje.Models.Product




<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 mt-3 ">
        <h2>@lang["Satis"]</h2>

        <h4>@lang["Product"]</h4>
        <hr />
        <form asp-action="Satis">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">@lang["Product Name"]</label>
                <label asp-for="ProductName" class="form-control" >@Model.ProductName</label>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label">@lang["Product Price"]</label>
                <label asp-for="ProductPrice" class="form-control" >@Model.ProductPrice</label>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductStock" class="control-label">@lang["Product Stock"]</label>
                <input asp-for="ProductStock" class="form-control" />
                <span asp-validation-for="ProductStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@lang["Save"] class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>


<div>
    <a asp-action="Index">@lang["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
